{
	"name": "@wowotou/cli",
	"version": "0.0.2",
	"description": "",
	"main": "index.js",
	"bin": {
		"wwt": "./dist/main/code/index.js"
	},
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc",
		"dev": "tsc -w",
		"prettier:fix": "prettier -c --write ./**/*.{ts,js}",
		"eslint:fix": "eslint --fix ./**/*.{ts,js}",
		"release": "standard-version",
		"commit": "git-cz",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-push": "echo 提交代码前需要先进行单元测试 && npm test"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"npm run eslint:fix",
			"npm run prettier:fix"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"feat",
					"fix",
					"docs",
					"style",
					"refactor",
					"test",
					"chore",
					"revert"
				]
			],
			"subject-full-stop": [
				0,
				"never"
			],
			"subject-case": [
				0,
				"never"
			]
		}
	},
	"author": "xingmu",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@types/jest": "^25.2.3",
		"@types/node": "^14.0.9",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"eslint-config-alloy": "^3.7.2",
		"husky": "^4.2.5",
		"jest": "^26.0.1",
		"lint-staged": "^10.2.7",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.1.0",
		"typescript": "^3.9.3"
	},
	"dependencies": {},
	"repository": {
		"type": "git",
		"url": "https://github.com/daihaoxin/wwt-cli.git"
	},
	"keywords": [],
	"bugs": {
		"url": "https://github.com/daihaoxin/wwt-cli/issues"
	},
	"homepage": "https://github.com/daihaoxin/wwt-cli#readme"
}
