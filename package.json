{
  "name": "@wowotou/cli",
  "version": "0.0.1",
  "description": "",
  "author": "xingmu",
  "bin": {
    "wwt": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "npm run prettier:fix && npm run eslint:fix",
    "build": "node ./script/build.js",
    "dev": "node ./script/start.js",
    "prettier:fix": "prettier -c --write ./**/*.*",
    "eslint:fix": "eslint --fix ./**/*.{js,jsx,ts,tsx}",
    "pc": "eslint --fix && prettier --write && git add .",
    "release": "standard-version",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0",
    "test": "echo 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "echo 提交代码前需要先进行单元测试 && npm test"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.*": [
      "npm run prettier:fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "chore",
          "revert"
        ]
      ],
      "subject-full-stop": [
        0,
        "never"
      ],
      "subject-case": [
        0,
        "never"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/commander": "^2.12.2",
    "@types/node": "^14.14.3",
    "@types/shelljs": "^0.8.8",
    "@types/webpack-env": "^1.15.3",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "commitizen": "~4.2.1",
    "eslint": "^7.9.0",
    "eslint-config-alloy": "^3.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "standard-version": "~9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "shelljs": "^0.8.4",
    "source-map-support": "^0.5.19",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack": "^4.44.2",
    "webpack-node-externals": "^2.5.2"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/daihaoxin/wwt-cli.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/daihaoxin/wwt-cli/issues"
  },
  "homepage": "https://github.com/daihaoxin/wwt-cli#readme"
}
